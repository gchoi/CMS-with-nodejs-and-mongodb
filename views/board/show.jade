script(src='/javascript/common.js')

head
	link(rel='stylesheet', type='text/css', href='../css/common.css')
	link(rel='stylesheet', type='text/css', href='../css/sub03/sub01.css')
	link(rel='stylesheet', type='text/css', href='../css/sub03/view.css')
	link(rel='stylesheet', type='text/css', href='../css/cloud.css')
	

h1= title

div#detail03
	div#boardTop
		div#boardTitle= title
	div#boardMiddle
		div#readHeader
			div#titleWrap
				a#title #{board.subject}
				div#time #{board.insert_date}
			div#information
				div#author
					a #{board.user_name}
				div#readNum 조회 수 : #{board.hit}
		div#readMiddle #{board.content}
		div#readFooter
			input( type ='button', id='modify', value='수정', onClick="location.href='/board_modify?id=#{board_id}&num=#{board.index}'")
			input( type ='button', id='delete', value='제거', onClick="call_confirm_get('정말 삭제하시겠습니까?','/board_delete?id=#{board_id}&num=#{board.index}')")
		
	div#boardBottom
	


table
	-for(var i=0; i<comment.length; i++)
		-if(i==0)
			tr
				td.content(colspan='3') Comment
		-if(comment[i])
			tr
				td.content #{comment[i].user_id}
				td.content #{comment[i].content}
				td.content(width='50', align='right')
					input(type='button', id='commentDelete', value='제거', onClick="");
	tr
		td.content(colspan='3', align = 'right')
			-for(var i=0; i<length; i++)
				a(href='/board?id=#{board_id}&num=#{board.index}&comm_page=#{i+1}') [#{i+1}]
					
br

form(method='post', action='/comment_write')
	table
		tr
			td.content User
			td.content #{sessionId}
			td.content Password
			td.content
				input(type='password', id='passwordForm', name='passwordForm')		
		tr
			td.content Comment
			td.content(colspan='3')
				input(type='textbox', id='commentForm', name='commentForm')	
				input(type='hidden', id='board_id', name='board_id', value='#{board_id}')
				input(type='hidden', id='board_index', name='board_index', value='#{board.index}')
				input(type='hidden', id='board_subject', name='board_subject', value='#{board.subject}')
		tr
			td.content(colspan='4')
				input(type = 'submit', id = 'commentWriteButton', name = 'commentWriteButton', value = '달기')
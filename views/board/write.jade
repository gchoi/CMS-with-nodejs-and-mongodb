html
  head
    title
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    link(rel='stylesheet', type='text/css', href='/css/common.css')
    link(rel='stylesheet', type='text/css', href='/css/sub03/sub01.css')
    link(rel='stylesheet', type='text/css', href='/css/cloud.css')
    link(href='http://api.mobilis.co.kr/webfonts/css/?fontface=NanumPenWeb', rel='stylesheet', type='text/css')
    link(href='http://api.mobilis.co.kr/webfonts/css/?fontface=NanumGothicWeb', rel='stylesheet', type='text/css')
  body
    #viewport
      #world
    
    include ../common/header
    include ../common/mainMenu
    include ../common/subMenu/subMenu03.jade

    script(type='text/javascript')
      function preview(){
        OpenWindow('', 'newWin', 850, 450);
        var frm = document.getElementById('frmwrite'); 
    
        frm.action = '/board_preview';
        frm.target = 'newWin';
        frm.submit();
        
        frm.action='/board_write';
        frm.target = '_self';
      }
      function submit(){
        document.getElementById('frmwrite').submit();
      }
  
    form(action='/board_write', method='POST')#frmwrite
      div#detail03
        h1= title
        div#boardTop
          div#boardTitle= title
        div#boardMiddle
          div#editorHeader
            input(type='text',value='제목을 입력하세요', id='subject', name='subject')
          div#editorMiddle
            input(type='text', name='name', id='name')
            br
            textarea(name='memo', id='memo')      
          div#editorFooter
            input(type='hidden', name='id', value='#{id}')
            input(type='button', onclick='javascript:preview();', value='미리보기')
            a(href='javascript:submit();')
              img#submitButton(src='../images/button_submit.png')
        div#boardBottom 
    include ../common/footer
    script(src='/javascript/cloud.js', type='text/javascript', charset='utf-8')

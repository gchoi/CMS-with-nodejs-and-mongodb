script(src="/javascript/common.js")

h1= title

form(method='post', name='modify_form', action ='/update')
	table
		tr
			td.content No
			td.content #{docs.index}
				input(type='hidden', name='index', value='#{docs.index}')
				input(type='hidden', name='board_id', value='#{docs.board_id}')
			
		tr
			td.content Subject
			td.content
				input(
					type='textbox'
					,id = 'subjectForm'
					,name = 'subjectForm'
					,value = docs.subject
				)

		tr
			td.content Name
			td.content #{docs.user_name}
				input(
					type='hidden'
					,id = 'nameForm'
					,name = 'nameForm'
					,value = docs.user_name
				)
		tr
			td.content Content
			td.content
				textarea(name='memoForm', value='#{docs.content}') #{docs.content}
						
	input(
		type = 'button'
		,id = 'modifyButton'
		,name = 'modifyButton'
		,value = '수정'
		,onClick = 'call_confirm_post("정말 수정하시겠습니까","modify_form")'
	)

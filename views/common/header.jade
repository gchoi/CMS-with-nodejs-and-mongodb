script(src='/javascript/common.js', type='text/javascript', charset='utf-8')
script(src='/javascript/submit_enter.js', type='text/javascript', charset='utf-8')

script
	function join(){
		location.href='/join';
	}
	function save_url(){
		document.getElementById('url').value = location.href;
	}
	function mypage(){
		location.href='/mypage';
	}

#top
#topMenu
	- if(!session)
		form#loginFrm(action='/sessions', method='POST', onsubmit='return save_url();')
			input#idInputBox(type='text', name='id')
			input#pwInputBox(type='password', name='password')
			input#pwUrlBox(type='hidden', name='url', id='url', value='')
			input#loginButton(type='submit', name='submit', value='', style='border:0px;')
			input#signUpButton(type='button', name='signUp', onclick='join();', class='clickable')
	- else
		div(style='display:inline;position:absolute;top:5px;left:0px;text-align:right;width:340px;') !{session.Id} 님이 로그인 하셨습니다.
		a(href='/logout')
			#logoutButton
		input(type='button', name='mypage', onclick='mypage();', value='회원정보')

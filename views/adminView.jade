h1= title

p #{sessionId} 님이 로그인 하셨습니다.

div(style='width:760px;')
	form(method='post', action='/board_search', align='right')
		input(type='hidden', name='id', value='#{id}')
		select(id='type', name='type')
			option(value='Id') 아이디
			option(value='subject') 제목
			option(value='memo') 내용
			option(value='name') 이름
		input(type='text', id='content', name='content')
		input(type='submit', id='search_button', value='검색')
	table
		tr
			th.content No
			th.content Subject
			th.content User
			th.content Date
			-for(var i=0; i<paging; i++)
				-if(docs[i]){
					tr
						td.content #{length - ( (NowPage-1) * paging ) - i}
						td.content
							a(href='/board/#{docs[i].no}?id=#{id}') #{docs[i].subject}	
						td.content #{docs[i].name}
						td.content #{docs[i].date}
				-}
	center	
		-for(var i=0; i <= (length/paging) ; i++)	
			a(href='/board?id=#{id}&page=#{i+1}') [#{i+1}]

	input( type ='button', id='write', value='write', onClick='location.href="/write?id=#{id}"')
	input( type ='button', id='userlist', value='유저 리스트', onClick="location.href='/admin/userlists'")

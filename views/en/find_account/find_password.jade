html
	head
		title
			!{title}
		meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
		link(rel='stylesheet', type='text/css', href='/css/en/common.css')
		link(rel='stylesheet', type='text/css', href='/css/en/ready.css')
		link(rel='stylesheet', type='text/css', href='/css/en/cloud.css')
		link(rel='stylesheet', type='text/css', href='/css/en/findUserInfo.css')
		link(rel='shortcut icon', href='/images/en/favicon.gif')
		link(href='http://api.mobilis.co.kr/webfonts/css/?fontface=NanumPenWeb', rel='stylesheet', type='text/css')
		link(href='http://api.mobilis.co.kr/webfonts/css/?fontface=NanumGothicWeb', rel='stylesheet', type='text/css')
		script(src="http://code.jquery.com/jquery-1.7.2.min.js", type="text/javascript")
		script
			$(document).ready(function(){

				$('#findUserId').click(function(){
					$('#findUserInfoForm').attr('action', '/find_id').submit();
				});
				$('#findUserPw').click(function(){
					$('#findUserInfoForm').attr('action', '/find_password').submit();
				});

				$('#find_id').focus();
			});
	body
		#viewport
			#world
		include ../common/header.jade
		include ../common/mainMenu.jade
		

		#detail01
			#detail01Text
				#title 회원 정보 찾기
				#contents
					| 아이디 혹은 비밀번호를 잊어버리셨다구요?
		#detail02
			#boardTop
				form(method='get', id='findUserInfoForm', name='findUserInfoForm')
					#findUserId.menuText 아이디 찾기
					#findUserPw.menuText.select 비밀번호 찾기
			#boardMiddle
				#wrap
					#message
						가입하실 때 입력하신 아이디 및 이메일 주소( 예) goorm@skima.co.kr)를 입력해 주세요.
					form#findInfoForm(method='post', action='/find_password/result')
						input(type='text', id='find_id', name='id')
						br
						br
						input(type='text', id='find_email', name='email')
						input(type='submit', id='find_password', name='find_password_submit', value='', class='clickable')
						
			#boardBottom

		script(src='../javascript/cloud.js', type='text/javascript', charset='utf-8')
		include ../common/footer.jade

	
		
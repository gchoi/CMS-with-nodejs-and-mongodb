		script
			function goto_page(j) {
				$('#page').val(j);
				$('#page_form').submit();
			}

		script(type='text/javascript')
			var date_array = new Array();
		
			function leadingZeros(n, digits) {
				var zero = '';
				n = n.toString();
				if (n.length < digits) {
					for (i = 0; i < digits - n.length; i++)
						zero += '0';
				}
				return zero + n;
			}
		
			function getTimeStamp(date) {
				var d = new Date(date);
				var s = leadingZeros(d.getFullYear(), 4) + '-' + leadingZeros(d.getMonth() + 1, 2) + '-' + leadingZeros(d.getDate(), 2);
				return s;
			}
			
			$(document).ready(function(){
				$('#searchInputBox').focus();
			
				var data = eval(!{JSON.stringify(docs)});
				$.each(data, function(index, value){
					var date = getTimeStamp(value.insert_date);
					var id = '#time' + index;
					var content = '<p>' + date + '</p>';
					$(id).append(content);
				});
			});
			
		div#detail02
			div#boardTop
				#mypage_menu1.menuText  
				#mypage_menu2.menuText.select 
				#mypage_menu3.menuText 
			div#boardMiddle
				div#boardList.contents
					table(cellspacing='0')
						tr
							th.no 번호
							th.board 게시판
							th.title 제목
							th.time 날짜
							th.readNum 조회수
							-for(var i=0; i<docs.length; i++)
								-if(docs[i]){
									tr
										td.no #{length - ( (current_page-1) * paging ) - i}
										td.author
											a(href='/board/#{docs[i].board_id}', style="color:black;") #{board_name[i]}
										td.title
											a(href='/board/#{docs[i].board_id}/#{docs[i].index}', style="color:black;") #{docs[i].subject}
											[#{comm_number[i]}]
										td.time
											div('id'='time'+i)
										td.readNum #{docs[i].hit}
								-}			
				div#boardFooter
					div#pageLine
						div#pagination
							-current_page = parseInt(current_page);
							-var last = Math.ceil(length/paging);
							form(method='post', id='page_form', action='/mypage/recent_docs')
								input(type='hidden', id='page', name='page', value='#{current_page}')
								-if(last>0)
									#firstPage(onClick='goto_page(1)', style='display:inline;cursor:hand;')
										img(src='/images/en/board/button_forward.png')
										span 처음 페이지 |
								-for(var j= (current_page-2) ; j <= (current_page+2) ; j++) {
									-if(j>0 && j<= last)
										-if( j == current_page && j != last)
											#pages(onClick='goto_page(#{j})', style='display:inline;cursor:hand;')
												b #{j} 
												|
										-else if( j == current_page && j == last )
											#pages(onClick='goto_page(#{j})', style='display:inline;cursor:hand;')
												b #{j}
										-else if( j != last )
											#pages(onClick='goto_page(#{j})', style='display:inline;cursor:hand;')
												!{j} |
										-else
											#pages(onClick='goto_page(#{j})', style='display:inline;cursor:hand;')
												!{j}
								-}
								-if(last>0)
									#pages(onClick='goto_page(#{last})', style='display:inline;cursor:hand;')
										span | 마지막 페이지
										img(src='/images/en/board/button_backward.png')					
				form(method='post', id='mypage_menu', name='mypage_menu')
			div#boardBottom

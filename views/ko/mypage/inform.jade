									input(
										type = 'password'
										,name = 'mypage_password'
										,id = 'mypage_password'			
										,class = 'textbox'
										,style = 'display : "inline";'	
									)
									br
									br
									#check_password.text(style = 'display : inline;') 비밀번호 변경을 윈하실 때만 입력해주세요.
							tr
								th 비밀번호 확인
								td.wide
									input(
										type = 'password'
										,name = 'mypage_confirm'
										,id = 'mypage_confirm'
										,class = 'textbox'
										,style = 'display : "inline";'			
									)
									br
									br
									#check_confirm.text(style = 'display : inline;') 비밀번호를 다시 한 번 입력해 주세요.
							tr.odd
								th 이름
								td.wide
									input(
										type = 'textbox'
										,name = 'mypage_name'
										,id = 'mypage_name'
										,class = 'textbox'
										,value = '#{user.name}'
										,style = 'display : inline;'			
									)
									br
									br
									#check_name.text(style = 'display : inline;') 3~15자리, 한글/알파벳/숫자/특수문자(-/_/.)						
							tr
								th 이메일
								td.wide
									input(
										type = 'textbox'
										,name = 'mypage_email'
										,id = 'mypage_email'
										,class = 'textbox'
										,value = '#{user.email}'
										,style = 'display:inline;'			
									)
									br
									br
									#check_email.text(style = 'display : inline;') 예) goorm@skima.co.kr			

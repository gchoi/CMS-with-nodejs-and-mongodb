									input(
										type = 'hidden'
										,name = 'mypage_id'
										,id = 'mypage_id'	
										,value = '#{user.Id}'
										,style = 'display : "inline";'			
									)
									#check_id.text(style = 'display : inline;') !{user.Id}
							tr.odd

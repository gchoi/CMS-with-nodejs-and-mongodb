script	
	//120710 JH 추가. 수정시 수정 여부 확인 스크립트	
	function document_modify_confirm() {
		var doc = document.getElementsByName('modify_form')[0];
		if(confirm("정말 수정하시겠습니까?")) {
			doc.submit();
		}
	}

form(method='post', name='modify_form', id='modify_form', action='/user_modify')
	table(border=1)
		tr
			td ID
			td
				input(type='hidden', name='user_id', value='#{info.Id}')
				!{info.Id}
		tr
			td
				권한
			td
				-if(info.role == 'admin')
					select(name='user_role')
						option(value='Guest') Guest
						option(value='admin', selected) admin
				-else
					select(name='user_role')
						option(value='Guest', selected) Guest
						option(value='admin') admin
		tr
			td
				이름
			td
				!{info.name}
		tr
			td email
			td
				!{info.email}
	input(type='button', name='user_modify', value='수정', onClick='document_modify_confirm()')
a(href='/admin/userlists')
	input(type='button', name='gotolist', value='목록')